@model Shop.Models.Email.EmailViewModel
@{
    ViewData["Title"] = "Write mail...";
}


<div class="container" style="margin-top: 200px">
    <form method="post">
        <div class="row justify-content-center">
            <div class="form-group col-md-5">
                <h1 style="margin-right: 25px;">Write your message:</h1>
                <div class="input-group">
                    <label asp-for="To" style="font-family: Arial">Receiver:</label>

                    <input asp-for="To" class="form-control" style="margin-left: 10px;" />


                </div>
                <br />
                <div class="input-group">
                    <label asp-for="Subject" style="font-family: Arial">Subject:</label>
                    <input asp-for="Subject" class="form-control" style="margin-left: 20px;" />

                </div>
                <br />
                <div class="input-group">
                    <label asp-for="Body" style="font-family: Arial">Message:</label>
                    <input asp-for="Body" class="form-control" style="margin-left: 8px;"></in>
                    <button asp-controller="Email" asp-action="SendEmail" class="btn btn-lg btn-success">Send</button>
                </div>
            </div>
            @*<div class="form-group col-md-2" style="margin-top: 195px;">
                <button asp-controller="Email" asp-action="SendEmail" class="btn btn-lg btn-success">Send</button>
            </div>*@
        </div>
    </form>
</div>