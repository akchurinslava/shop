@model Shop.Models.OpenWeather.SearchCityViewModel
@{
    ViewData["Title"] = "Search City";
}

<div class="container">
    <form method="post">
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
     
                <h1>Search the forecast in a city</h1>
                <label asp-for="CityName" font-family: Arial"></label>

                <input asp-for="CityName" class="form-control" />

                <span asp-validation-for="CityName" class="text-danger"></span>

            </div>
        </div>
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                
                <button asp-controller="OpenWeather" asp-action="searchCity" class="btn btn-primary">Search</button>

            </div>

        </div>
    </form>
</div>