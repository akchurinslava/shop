@model Shop.Models.OpenWeather.SearchCityViewModel
@{
    ViewData["Title"] = "Search City";
}

<div class="container" style="margin-top: 200px">
    <form method="post">
        <div class="row justify-content-center">
            <div class="form-group col-md-5">
                <h1>Search the forecast in a city</h1>
                <label asp-for="CityName" style="font-family: Arial">City name:</label>
                <div class="input-group">
                    <input asp-for="CityName" class="form-control" />
                    <span asp-validation-for="CityName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-md-2" style="margin-top: 75px;">
                <button asp-controller="OpenWeather" asp-action="searchCity" class="btn btn-lg btn-success">Search</button>
            </div>
        </div>
    </form>
</div>
