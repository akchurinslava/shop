@model Shop.Models.Cocktails.SearchCocktailsViewModel
@{
    ViewData["Title"] = "Search Cocktail";
}

<div class="container">
    <form method="post">
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <h1>Search Cocktail</h1>
                <label asp-for="CocktailName" font-family: Arial">Enter cocktail name</label>

                <input asp-for="CocktailName" class="form-control" />

                <span asp-validation-for="CocktailName" class="text-danger"></span>

            </div>
        </div>
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">

                <button asp-controller="Cocktails" asp-action="SearchCocktails" class="btn btn-primary">Search</button>

            </div>

        </div>
    </form>
</div>