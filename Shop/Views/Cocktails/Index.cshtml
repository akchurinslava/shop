@model Shop.Models.Cocktails.SearchCocktailsViewModel
@{
    ViewData["Title"] = "Search Cocktail";
}




<div class="container" style="margin-top: 200px">
    <form method="post">
        <div class="row justify-content-center">
            <div class="form-group col-md-5">
                <h1>Search Cocktail</h1>
                <label asp-for="CocktailName" style="font-family: Arial">Cocktail name:</label>
                <div class="input-group">
                    <input asp-for="CocktailName" class="form-control" />
                    <span asp-validation-for="CocktailName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-md-2" style="margin-top: 75px;">
                <button asp-controller="Cocktails" asp-action="SearchCocktails" class="btn btn-lg btn-success">Search</button>
            </div>
        </div>
    </form>
</div>