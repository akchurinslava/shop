@model Shop.Models.AccuWeather.SearchAccuWeatherViewModel
@{
    ViewData["Title"] = "Weather by city";
}

<div class="container">
    <form method="post">
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <h1>Weather in city</h1>
                <label asp-for="CityName" font-family: Arial">Enter city name</label>

                <input asp-for="CityName" class="form-control" />

                <span asp-validation-for="CityName" class="text-danger"></span>

            </div>
        </div>
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">

                <button asp-controller="AccuWeather" asp-action="SearchCity" class="btn btn-primary">Search</button>

            </div>

        </div>
    </form>
</div>

