@model Shop.Models.AccuWeather.SearchAccuWeatherViewModel
@{
    ViewData["Title"] = "Weather by city";
}



<div class="container" style="margin-top: 200px">
    <form method="post">
        <div class="row justify-content-center">
            <div class="form-group col-md-5">
                <h1>Weather in city</h1>
                <label asp-for="CityName" style="font-family: Arial">City name:</label>
                <div class="input-group">
                    <input asp-for="CityName" class="form-control" />
                    <span asp-validation-for="CityName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-md-2" style="margin-top: 75px;">
                <button asp-controller="AccuWeather" asp-action="SearchCity" class="btn btn-lg btn-success">Search</button>
            </div>
        </div>
    </form>
</div>
